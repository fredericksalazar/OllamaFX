<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="rootVBox" spacing="10.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.org.ollamafx.controller.ModelDetailController">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
    <children>
        <Label fx:id="modelNameLabel" alignment="CENTER" prefHeight="44.0" prefWidth="399.0" styleClass="h1" text="Nombre del Modelo" textAlignment="CENTER">
            <font>
                <Font size="36.0" />
            </font>
        </Label>
        <Text fx:id="modelDescriptionText" fill="#4d4d4d" strokeType="OUTSIDE" strokeWidth="0.0" text="Aquí va una descripción larga y detallada del modelo, explicando sus capacidades, su tamaño, y para qué tipo de tareas es más adecuado." wrappingWidth="400.0">
         <font>
            <Font size="14.0" />
         </font></Text>
        <Label text="Tags Disponibles:">
            <font>
                <Font size="16.0" />
            </font>
            <VBox.margin>
                <Insets top="15.0" />
            </VBox.margin>
        </Label>
        <TableView fx:id="tagsTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="tagNameColumn" prefWidth="150.0" text="Name" />
                <TableColumn fx:id="tagSizeColumn" prefWidth="100.0" text="Size" />
                <TableColumn fx:id="tagContextColumn" prefWidth="100.0" text="Context" />
                <TableColumn fx:id="tagInputColumn" prefWidth="100.0" text="Input" />
                <TableColumn fx:id="tagActionColumn" prefWidth="100.0" text="Action" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
