<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.StackPane?> <BorderPane fx:id="mainBorderPane" prefHeight="600.0" prefWidth="900.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.org.ollamafx.controller.MainController">
    <left>
        <VBox fx:id="sidebarVBox" alignment="TOP_CENTER" prefWidth="200.0" spacing="15.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#showAvailableModels" prefWidth="180.0" styleClass="sidebar-button" text="Modelos Disponibles">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="30.0" />
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#showLocalModels" prefWidth="180.0" styleClass="sidebar-button" text="Modelos Locales">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>

                <Separator prefWidth="200.0" styleClass="sidebar-separator">
                    <VBox.margin>
                        <Insets bottom="15.0" top="15.0" />
                    </VBox.margin>
                </Separator>

                <Button mnemonicParsing="false" onAction="#createNewChat" prefWidth="180.0" styleClass="sidebar-button" text="Nuevo Chat">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <ListView fx:id="chatListView" prefHeight="200.0" prefWidth="200.0" styleClass="chat-list-view">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </ListView>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="centerContentPane" BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>