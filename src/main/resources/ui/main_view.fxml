<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainBorderPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.org.ollamafx.controller.MainController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="10.0" styleClass="header-bar" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="app-title" text="OllamaFX">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <StackPane HBox.hgrow="ALWAYS" />
                <Button fx:id="themeToggleButton" mnemonicParsing="false" onAction="#toggleTheme" text="☀/☾" />
                <Button mnemonicParsing="false" onAction="#createNewChat" styleClass="accent" text="+ Nuevo Chat" />
            </children>
            <padding>
                <Insets left="15.0" right="15.0" />
            </padding>
        </HBox>
    </top>
    <left>
        <VBox fx:id="sidebarVBox" prefWidth="220.0" spacing="5.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="sidebar-section-label" text="Biblioteca">
                    <VBox.margin>
                        <Insets left="10.0" top="10.0" />
                    </VBox.margin>
                </Label>
                <Button alignment="BASELINE_LEFT" maxWidth="Infinity" mnemonicParsing="false" onAction="#showAvailableModels" styleClass="sidebar-item" text="Modelos Disponibles" />
                <Button alignment="BASELINE_LEFT" maxWidth="Infinity" mnemonicParsing="false" onAction="#showLocalModels" styleClass="sidebar-item" text="Modelos Locales" />
                <Button alignment="BASELINE_LEFT" maxWidth="Infinity" mnemonicParsing="false" onAction="#openSettings" styleClass="sidebar-item" text="Configuración" />
                
                <Separator styleClass="sidebar-separator">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                    </VBox.margin>
                </Separator>
                
                <Label styleClass="sidebar-section-label" text="Chats">
                    <VBox.margin>
                        <Insets left="10.0" />
                    </VBox.margin>
                </Label>
                <ListView fx:id="chatListView" styleClass="sidebar-list-view" VBox.vgrow="ALWAYS" />
            </children>
            <padding>
                <Insets bottom="10.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="centerContentPane" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>
