<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane stylesheets="@../css/home.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.org.ollamafx.controller.HomeController">
   <children>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="edge-to-edge-scroll-pane" vbarPolicy="AS_NEEDED">
         <content>
            <VBox spacing="40.0" styleClass="home-container">
               <children>
                  <!-- HERO SECTION -->
                  <StackPane alignment="CENTER_LEFT" styleClass="hero-section">
                     <children>
                        <!-- Background Gradient or Image -->
                        <Region styleClass="hero-background" />
                        
                        <VBox spacing="15.0" styleClass="hero-content">
                           <children>
                              <Label styleClass="hero-title" text="Discover Intelligence." wrapText="true" />
                              <Label styleClass="hero-subtitle" text="Explore the latest local LLMs, optimized for your hardware." wrapText="true" />
                              <Button fx:id="btnExplore" mnemonicParsing="false" onAction="#scrollToPopular" styleClass="button, hero-button" text="Start Exploring" />
                           </children>
                           <StackPane.margin>
                              <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                           </StackPane.margin>
                        </VBox>
                     </children>
                  </StackPane>

                   <!-- RECOMMENDED SECTION -->
                  <VBox spacing="15.0" styleClass="section-container">
                     <children>
                        <Label styleClass="section-title" text="Recommended for Your Mac" />
                        <Label styleClass="section-subtitle" text="Models that run perfectly on your hardware." />
                        <ScrollPane fitToHeight="true" hbarPolicy="AS_NEEDED" vbarPolicy="NEVER" styleClass="carousel-scroll-pane">
                           <content>
                              <HBox fx:id="recommendedContainer" spacing="20.0" styleClass="carousel-container">
                                 <padding>
                                    <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                                 </padding>
                              </HBox>
                           </content>
                        </ScrollPane>
                     </children>
                     <padding>
                        <Insets bottom="0" left="0" right="0" top="0" />
                     </padding>
                  </VBox>

                  <!-- POPULAR SECTION (Alternating Background) -->
                  <VBox spacing="15.0" styleClass="section-container-alt">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                           <children>
                              <Label maxWidth="1.7976931348623157E308" styleClass="section-title" text="Top Rated &amp; Popular" HBox.hgrow="ALWAYS" />
                              <Button mnemonicParsing="false" onAction="#viewMore" styleClass="button, link-button" text="View More" />
                           </children>
                        </HBox>
                        <ScrollPane fitToHeight="true" hbarPolicy="AS_NEEDED" vbarPolicy="NEVER" styleClass="carousel-scroll-pane">
                           <content>
                              <HBox fx:id="popularContainer" spacing="20.0" styleClass="carousel-container">
                                 <padding>
                                    <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                                 </padding>
                              </HBox>
                           </content>
                        </ScrollPane>
                     </children>
                  </VBox>

                  <!-- NEW SECTION -->
                  <VBox spacing="15.0" styleClass="section-container">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                           <children>
                              <Label maxWidth="1.7976931348623157E308" styleClass="section-title" text="Fresh from the Community" HBox.hgrow="ALWAYS" />
                              <Button mnemonicParsing="false" onAction="#viewMore" styleClass="button, link-button" text="View More" />
                           </children>
                        </HBox>
                         <ScrollPane fitToHeight="true" hbarPolicy="AS_NEEDED" vbarPolicy="NEVER" styleClass="carousel-scroll-pane">
                           <content>
                              <HBox fx:id="newContainer" spacing="20.0" styleClass="carousel-container">
                                 <padding>
                                    <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                                 </padding>
                              </HBox>
                           </content>
                        </ScrollPane>
                     </children>
                     <padding>
                        <Insets bottom="50.0" left="0" right="0" />
                     </padding>
                  </VBox>

               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</StackPane>
