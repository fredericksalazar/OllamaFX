<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.org.ollamafx.controller.ChatController">
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="10.0" styleClass="header-bar" BorderPane.alignment="CENTER">
         <children>
            <javafx.scene.control.ComboBox fx:id="modelSelector" promptText="Select a Model" styleClass="combo-box" prefWidth="200.0" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="statusLabel" text="Ready" textFill="#8a8a8a" />
         </children>
         <padding>
            <Insets left="15.0" right="15.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" styleClass="chat-scroll-pane" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="messagesContainer" spacing="15.0" styleClass="chat-area">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <VBox styleClass="input-area-container" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="BOTTOM_CENTER" spacing="10.0" styleClass="input-area">
               <children>
                  <TextArea fx:id="inputField" maxHeight="150.0" minHeight="40.0" prefHeight="50.0" prefRowCount="1" promptText="Type a message..." wrapText="true" HBox.hgrow="ALWAYS" />
                  <Button fx:id="sendButton" mnemonicParsing="false" onAction="#sendMessage" styleClass="suggested-action" text="Send" />
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>
