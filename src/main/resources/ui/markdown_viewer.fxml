<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.web.WebView?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.org.ollamafx.controller.MarkdownViewerController" prefHeight="700.0" prefWidth="900.0" styleClass="markdown-viewer-root">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="viewer-header">
            <padding>
                <Insets top="15.0" right="20.0" bottom="15.0" left="20.0"/>
            </padding>
            <children>
                <Label fx:id="titleLabel" text="Markdown Viewer" styleClass="viewer-title">
                    <graphic>
                        <FontIcon iconLiteral="fth-file-text" iconSize="20" styleClass="viewer-title-icon"/>
                    </graphic>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="openExternalButton" onAction="#onOpenExternalClicked" text="Open External" styleClass="viewer-btn">
                     <graphic>
                        <FontIcon iconLiteral="fth-external-link" iconSize="16" />
                    </graphic>
                </Button>
                <Button fx:id="closeButton" onAction="#onCloseClicked" text="Close" styleClass="viewer-btn-primary">
                    <graphic>
                        <FontIcon iconLiteral="fth-x" iconSize="16" />
                    </graphic>
                </Button>
            </children>
        </HBox>
    </top>
    <center>
        <WebView fx:id="webView" />
    </center>
</BorderPane>
